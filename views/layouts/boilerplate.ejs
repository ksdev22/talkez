<body>
    <% if(success.length> 0){ %>
        <div class="alert alert-success fixed-top">
            <%= success %>
        </div>
        <% } %>
            <% if(error.length> 0){ %>
                <div class="alert alert-danger fixed-top">
                    <%= error %>
                </div>
                <% } %>
                    <%- body %>
                        <script>
                            const alerts = document.querySelectorAll(".alert")
                            setTimeout(() => {
                                for (let alert of alerts) {
                                    alert.classList.add("hide")
                                }
                            }, 3000)
                        </script>
</body>

